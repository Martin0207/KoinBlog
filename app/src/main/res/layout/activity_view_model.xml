<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.viewmodel.ViewModelActivity">

    <Button
        android:id="@+id/btn_vm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add vm"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_vm2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_vm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add vm2"
        app:layout_constraintLeft_toRightOf="@id/btn_vm"
        app:layout_constraintRight_toLeftOf="@+id/btn_m"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add m"
        app:layout_constraintLeft_toRightOf="@+id/btn_vm2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_vm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@+id/btn_vm"
        app:layout_constraintRight_toRightOf="@+id/btn_vm"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_vm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/btn_vm2"
        android:text="0"
       app:layout_constraintRight_toRightOf="@+id/btn_vm2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@+id/btn_m"
        app:layout_constraintRight_toRightOf="@+id/btn_m"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>